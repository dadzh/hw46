<div class="jumbotron">
  <h1><%= t 'products.index.welcome' %></h1>
  <p><%= t 'products.index.welcome_description' %></p>
  <p><a href="#" class="btn btn-primary btn-lg"><%= t 'products.index.learn_more' %></a></p>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'products.index.categories' %></h3>
      </div>
      <div class="panel-body">
        <ul>
          <% Category.all.each do |category| %>
            <li><%= link_to category.send(Category.name_locale), category_path(category) %></li>
          <% end %>
          <li><%= link_to t(".all_products"), root_path %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12 products-pagination">
        <%= will_paginate @products %>
      </div>
    </div>

    <div class="row">
        <% @products.each do |product| %>

        <div class="col-sm-6 product-item">
          <div class="panel panel-default">
            <div class="panel-body">
              <h3><%= product.send(Product.title_locale) %></h3>
              <div> <%= image_tag product.image.thumb.url %> </div>
              <h4>$<%= product.price %></h4>
              <p>
                <%= link_to t('products.index.show_product'), product_path(product) %>
                <%= link_to t('products.index.add_to_cart') %>
              </p>
            </div>
          </div>
        </div>

        <% end %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'products.index.cart' %></h3>
        </div>
        <div class="panel-body">
          <%= t 'products.index.cart_is_empty' %>
        </div>
      </div>
  </div>
</div>